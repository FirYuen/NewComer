<!--
  Layout for account prompt (which just includes text and 2 buttons) that can appear when the user
  creates a new contact.
  SPRD: Modify this for custom alert dialog style.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@*android:drawable/dialog_buttonbar_divider_holo_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@*android:style/Holo.Light.Dialog.ButtonBar" >

        <Button
            android:id="@+id/left_button"
            style="@*android:style/Widget.Holo.Light.Button.Dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_weight="1" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/right_button"
            style="@*android:style/Widget.Holo.Light.Button.Dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
