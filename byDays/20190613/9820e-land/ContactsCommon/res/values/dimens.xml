    <dimen name="contact_bladeview_popup_width">120dip</dimen>
    <dimen name="contact_bladeview_width">21dip</dimen>
        <!-- text size of listitem pinned header view -->
    <dimen name="contact_list_pinned_header_text_size">14sp</dimen>
    <dimen name="contact_list_item_pinned_header_text_size">14sp</dimen>
        <!-- text size of searchview -->
