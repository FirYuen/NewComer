<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/select_contact_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="8dip"
        android:paddingStart="8dip"
        android:layout_marginLeft="8px"
        android:text="@null"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/select_all_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/select_contact_num"
        android:layout_toStartOf="@+id/select_contact_cb"
        android:paddingLeft="8dip"
        android:paddingStart="8dip"
        android:text="@string/select_all_contacts"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="26dp" />

    <CheckBox
        android:id="@+id/select_contact_cb"
        android:layout_width="24px"
        android:layout_height="24px"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="4.5px"
        />

</RelativeLayout>